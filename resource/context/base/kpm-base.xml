<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd   
           http://www.springframework.org/schema/aop     http://www.springframework.org/schema/aop/spring-aop-3.0.xsd   
           http://www.springframework.org/schema/tx      http://www.springframework.org/schema/tx/spring-tx-3.0.xsd"
			default-autowire="byName">
	<description>基础配置信息</description>
	<!-- 启用AOP -->
	<aop:aspectj-autoproxy />
	
	
	<!-- 数据源配置 -->
	<import resource="classpath:/context/base/kpm-base-ds.xml" />
	
	<!-- 定义受环境影响易变的变量 -->
	<bean id="propertyConfigurer" class="com.kcp.platform.sys.config.PropertyConfigurer" factory-method="getInstance" lazy-init="false">
		<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
		<property name="ignoreResourceNotFound" value="true" />
		<property name="locations">
			<list>
				<!-- 标准配置 -->
				<value>classpath*:/conf/application.properties</value>
				<value>classpath*:/conf/dataSource.properties</value>
				<value>classpath*:/conf/extConf.properties</value>
			</list>
		</property>
	</bean>
	
	<!-- 定义异常配置信息文件 -->
	<bean id="expMsgHolder" class="com.kcp.platform.core.exception.ExpMsgHolder" factory-method="getInstance" lazy-init="false">
		<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
		<property name="ignoreResourceNotFound" value="true" />
		<property name="locations">
			<list>
				<!-- 标准配置 -->
				<value>classpath*:/exception/systemErr.properties</value>
			</list>
		</property>
	</bean>
	
		<!-- 获取spring对象工具类 -->
	<bean class="com.kcp.platform.sys.context.SpringContextHolder"/>
	
	
	<!-- Mybatis配置-->
	<bean id="sqlSessionFactory"
		class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="configLocation"
			value="classpath:context/myibatis/mybatis-config.xml" />
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="com.kcp" />
		<property name="annotationClass"
			value="org.springframework.stereotype.Repository" />
	</bean>
	
	<bean id="sqlSession" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg index="0" ref="sqlSessionFactory" />
	</bean>
	
	<bean id="baseMyBatisDao" class="com.kcp.platform.core.dao.BaseMyBatisDao">
		<property name="sqlSession" ref="sqlSession"></property>
	</bean>
	
	<!-- jdbc配置 -->
	<bean id="baseJdbcDao" class="com.kcp.platform.core.dao.BaseJdbcDao">
		<property name="dataSource" ref="dataSource"/>
	</bean>
	
	<!-- 事务配置 -->
	<bean id="txManager" class = "org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource"/>
	</bean>
	
	<!-- 使用注解定义事务 -->
	<tx:annotation-driven transaction-manager="txManager" />
	
	<!-- 注解拦截界面 -->
	<tx:advice id="txAdvice" transaction-manager="txManager">
		<tx:attributes>
			<tx:method name="*" 
				no-rollback-for="com.kcp.platform.core.exception.NotRollbackException" />
		</tx:attributes>
	</tx:advice>
	
	<!-- AOP拦截器设置 -->
	<aop:config proxy-target-class="true">
		<aop:advisor order="1"
			pointcut="execution(* com.kcp*..*Service.*(..))"
			advice-ref="txAdvice" />
	</aop:config>
	
	
	<!-- 缓存 -->
	<bean id="cacheManager" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
		<property name="configLocation" value="classpath:cache/ehcache.xml"/>
	</bean>
	
	<!-- 默认缓存客户端 -->
	<bean id="defaultCacheClient" class="com.kcp.platform.base.cache.client.CacheClientFactoryBean">
		<property name="cacheManager" ref="cacheManager"></property>
		<property name="cacheName" value="defaultCache"/>
	</bean>
	
	
	<!-- 获取spring对象工具类 -->
	<bean class="com.kcp.platform.sys.context.SpringContextHolder"/>
	
	<!-- 系统初始化 -->
	<bean class="com.kcp.platform.sys.initialize.SysInitializer" init-method="initialize" />
	
	
	<!-- 支持上传文件 -->   
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver"/>
      
    <!-- 脚本引擎 -->
    <bean id="scriptEngine" class="com.kcp.platform.core.engine.GroovyScriptEngine"></bean>
    
    <!-- 扫描标记了注解的类 -->
	<context:component-scan base-package="com.kcp.platform.base" >
		<context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
	</context:component-scan>
</beans>